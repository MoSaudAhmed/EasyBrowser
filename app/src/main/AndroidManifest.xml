            android:name=".FreeMobileGames"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Health"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Home"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".News"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Reference"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Technology"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Shopping"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Sports"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".VideoSharing"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".FragOne" />
        <activity android:name=".FragTwo"></activity>
    </application>

</manifest>