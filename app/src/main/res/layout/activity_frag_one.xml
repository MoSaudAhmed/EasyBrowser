                android:horizontalSpacing="10dp"

                ></GridView>

            <View
                android:layout_below="@id/gv_technology_gridview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#3b5998"
                ></View>
            <Button
                android:id="@+id/btn_technology"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/gv_technology_gridview"
                android:background="#3b5998"
                android:text="+ See More +"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:onClick="technologyClicked"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_reference"
                android:layout_below="@id/btn_technology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="References"
                android:textColor="#3b5998"
                android:textSize="28dp"
                android:textStyle="bold"
                ></TextView>

            <GridView
                android:id="@+id/gv_reference_gridview"
                android:layout_below="@id/tv_reference"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:columnWidth="90dp"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"

                ></GridView>

            <View
                android:layout_below="@id/gv_reference_gridview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#3b5998"
                ></View>
            <Button
                android:id="@+id/btn_reference"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/gv_reference_gridview"
                android:background="#3b5998"
                android:text="+ See More +"
                android:textSize="20dp"
                android:onClick="referenceclicked"
                android:textColor="#FFF"
                android:layout_centerHorizontal="true"
                />



        </RelativeLayout>
    </ScrollView>


</FrameLayout>
