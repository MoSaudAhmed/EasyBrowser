            <Button
                android:id="@+id/btn_shopping"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/gv_shopping_gridview"
                android:background="#3b5998"
                android:text="+ See More +"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:onClick="shoppingclicked"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_mobilegames"
                android:layout_below="@id/btn_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="Android Market"
                android:textColor="#3b5998"
                android:textSize="28dp"
                android:textStyle="bold"
                ></TextView>

            <GridView
                android:id="@+id/gv_mobilegames_gridview"
                android:layout_below="@id/tv_mobilegames"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:columnWidth="90dp"
                android:numColumns="2"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"

                ></GridView>

            <View
                android:layout_below="@id/gv_mobilegames_gridview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#3b5998"
                ></View>
            <Button
                android:id="@+id/btn_mobilegames"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/gv_mobilegames_gridview"
                android:background="#3b5998"
                android:text="+ See More +"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:onClick="mobilegamesClicked"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_cooking"
                android:layout_below="@id/btn_mobilegames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="Cooking"
                android:textColor="#3b5998"
                android:textSize="28dp"
